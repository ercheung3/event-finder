<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <section class="event-show-section">
                <div class="event-show-container">
                    <%if(typeof event !=="undefined"){%>
                    <h1 class="page-heading">
                        <%= event.name %>
                    </h1>
                    <div class="event-img-box">
                        <% if(event.image){ %>
                            <!-- if img data exists, show -->
                            <a href="/events/<%=event._id%>">
                                <div class="event-img-bkg" style="background-image: url(<%=event.image%>)"
                                    aria-label="Picture of <%=event.name%>"></div>
                            </a>
                            <% }else { %>
                                <!-- if no img, show placeholder -->
                                <a href="/events/<%=event._id%>">
                                    <img class="event-img-placeholder" src="../../img/event-img.png"
                                        alt="Calendar icon">
                                </a>
                                <% } %>
                    </div>
                    <% if(event.date){ %>
                        <div class="show-text">
                            <h3>When: </h3>
                            <p class="event-date">
                                <%=event.date%>
                            </p>
                        </div>
                        <% } %>
                            <% if(event.location){ %>
                                <div class="show-text">
                                    <h3>Where: </h3>
                                    <p>
                                        <%=event.location%>
                                    </p>
                                </div>
                                <% } %>
                                    <% if(event.organization){ %>
                                        <div class="show-text">
                                            <h3>Organized By: </h3>
                                            <p>
                                                <%=event.organization%>
                                            </p>
                                        </div>
                                        <% } %>
                                            <% if(event.description){ %>
                                                <div class="show-text">
                                                    <h3>Description: </h3>
                                                    <p>
                                                        <%=event.description%>
                                                    </p>
                                                </div>
                                                <% } %>
                                                    <% if(event.tag){ %>
                                                        <div class="show-text">
                                                            <p>Tags:</p>
                                                            <p class="show-tag">
                                                                <%=event.tag%>
                                                            </p>
                                                        </div>
                                                        <% } %>
                                                            <div class="show-text">
                                                                <p class="show-created-by">
                                                                    Created by: <%= event.user.displayname %></a>
                                                                </p>
                                                            </div>
                </div>

                <div class="btn-container">
                    <% if(event.likes.includes(currId)) { %>
                        <form action="/events/<%= event._id %>/like?_method=PUT" method="POST">
                            <button class="like-btn" type="submit"><i class="fa-solid fa-heart"></i> Event Saved!</button>
                        </form>
                        <% } else { %>
                            <form action="/events/<%= event._id %>/like?_method=PUT" method="POST">
                                <button class="like-btn" type="submit"><i class="fa-regular fa-heart"></i> Save This Event!</button>
                            </form>
                            <% } %>
                </div>
                <div class="btn-container user">
                    <% if(currId.toString()==event.user._id) { %>
                        <button class="submit-btn edit">
                            <a href="/events/<%=event._id%>/edit">Edit your event</a>
                        </button>
                        <form class="delete-btn" action="/events/<%= event._id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete your event?</button>
                        </form>
                        <%}%>
                        
                        
                    </div>
                </section>
                <%} else {%>

                    <h1 class="page-heading">
                        <%= results.name %>
                    </h1>
                    <div class="event-img-box">
                        
                            <!-- if img data exists, show -->
                            <a href="/events/<%=results.id%>">
                                <div class="event-img-bkg" style="background-image: url(<%=results.images[1].url%>)"
                                    aria-label="Picture of <%=results.name%>"></div>
                            </a>
                            
                    </div>
                    <% if(results.dates.start.localDate){ %>
                        <div class="show-text">
                            <h3>When: </h3>
                            <p class="event-date">
                            <%=results.dates.start.localDate%>
                            </p>
                        </div>
                        <% } %>
                                <div class="show-text">
                                    <h3>Where: </h3>
                                    <p>
                                        <%=results._embedded.venues[0].name%>
                                    </p>
                                </div>
                                <div class="show-text">
                                    <h3>Get Tickets: </h3>
                                    <a href="<%=results.url%>">
                                        <%=`Get Tickets!`%>
                                        <br>
                                        <%=`${results.name} on TicketMaster!`%>
                                    <a>
                                </div>
                                <div class="btn-container">
                                    <% if(user.likes.includes(results.id)) { %>
                                        <form action="/events/<%= results.id %>/like?_method=PUT" method="POST">
                                            <button class="like-btn" type="submit"><i class="fa-solid fa-heart"></i> Event Saved!</button>
                                        </form>
                                        <% } else { %>
                                            <form action="/events/<%= results.id %>/like?_method=PUT" method="POST">
                                                <button class="like-btn" type="submit"><i class="fa-regular fa-heart"></i> Save This Event!</button>
                                            </form>
                                            <% } %>
                     <% } %>                   
                </div>

    </body>
    <%- include ('../partials/footer') %>

</html>
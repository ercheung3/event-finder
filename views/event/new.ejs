<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
    <header>
        <%- include('../partials/header') %>
    </header>
    <main>
        <div class="eventForm-container">
            <div class="newEvent-heading">
                <h2>New Event</h2>
            </div>
         <form action="/events" class="real-form" method = "POST">
             <div class="form-inputs">
             <input type="text" placeholder="Name">
             <input type="text" placeholder="Description">
             <input type="text" placeholder="Image URL">
             <input type="text" placeholder="Date">
             <input type="text" placeholder="Organization">
            
             <div class="drop">
                <select name="tag" >
                   <option value="">Select Event Type</option>
                   <option value="Music">Music</option>
                   <option value="Arts & Culture">Arts & Culture</option>
                   <option value="Community Events">Community Events</option>
                   <option value="Outdoor Recreation">Outdoor Recreation</option>
                   <option value="Health/Fitness">Health/Fitness</option>
               </select>
               </div>
               <div class="bottom-submit">
                <input type="text" name="location" placeholder="Location">
                <button class="submit-btn2" type="submit">Submit</button>
            </div>
        </div>
          </form>
        </div>
    </main>   
    

  <%- include ('../partials/footer') %>
    
</body>

</html>